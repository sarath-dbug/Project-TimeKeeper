        const mobileNumber = document.getElementById('mobileNumberInputadd').value;
        const address = document.getElementById('addressInputadd').value;
        const city = document.getElementById('cityInputadd').value;
        const pincode = document.getElementById('pincodeInputadd').value;
        
        if (name.trim() === "") {
            alert("Name cannot be empty");
            return false;
        }
        if (!/^[a-zA-Z ]+$/.test(name)) {
            alert("Name should not contain numbers or special characters");
            return false;
        }
        if (mobileNumber.trim() === "") {
            alert("Mobile Number cannot be empty");
            return false;
        }
        if (!/^\+?\d{1,12}$/.test(mobileNumber)) {
            alert("Mobile Number should contain a maximum of 12 numbers only");
            return false;
        }
        if (address.trim() === "") {
            alert("Address cannot be empty");
            return false;
        }
        if (city.trim() === "") {
            alert("City cannot be empty");
            return false;
        }
        if (pincode.trim() === "") {
            alert("Pincode cannot be empty");
            return false;
        }
        if (!/^\d{6}$/.test(pincode)) {
            alert("Pincode should contain exactly 6 digits");
            return false;
        }

        // If all validations pass, the form will be submitted
        return true;
    }
</script>

