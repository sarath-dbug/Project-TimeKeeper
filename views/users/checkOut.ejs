                                <tr>
                                    <td class="image product-thumbnail"><img
                                            src="/productsImages/<%= product.productId.image[0] %>"></td>
                                    <td>
                                        <h5><a href="shop-product-full.html"><%= product.productId.name %></a></h5>
                                        <span class="product-qty" name="quantity"><%= product.quantity %></span>
                                    </td>
                                    <td><%= product.subtotal %></td>
                                    <!-- <% totalAmount+=product.subtotal %> -->
                                </tr>
                                <% }) %>
                                <tr>
                                    <th>Shipping</th>
                                    <td colspan="2"><em>Free Shipping</em></td>
                                </tr>
                                <tr>
                                    <th>SubTotal</th>
                                    <td colspan="2" class="product-subtotal"><span  id="total" name="total" class="font-xl text-brand fw-900">â‚¹<%= total%></span></td>
