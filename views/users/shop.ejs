<script>
    function addToCart(proId, stock) {
        if (stock <= 0) {
            Swal.fire({
                icon: "error",
                title: "Out of Stock",
                text: "This product is currently out of stock.",
            });
        } else {
            $.ajax({
                url: "/addToCart/" + proId,
                method: "POST",
                success: (response) => {
                    console.log(response, "response");
                    if (response.status == true) {
                        Swal.fire({
                            title: "Added To Cart",
                            text: "Your Product has been added to Cart",
                            icon: "success",
                            timer: 5000,
                        }).then(() => {

                            if (response.newStock !== undefined) {
                                // Select the specific product card by its ID and update the stock
                                const productStockElement = document.getElementById(`productStock_${proId}`);
                                if (productStockElement) {
                                    productStockElement.textContent = 'Available stock' + response.newStock;
                                }
                            }
                        });

                    }

                     else {
                        location.href = "/login";
                    }
                },
                error: (error) => {
                    console.error(error);
                    Swal.fire({
                        icon: "error",
                        title: "Error",
                        text: "An error occurred while adding the product to the cart.",
                    });
                },
            });
        }
    }
</script>
<script>
	function addToWishList(proId) {
		event.preventDefault();
    $.ajax({
      url: '/add-to-wishlist',
      method: 'POST',
      data: {
        proId: proId
      },
      success: (response) => {
        if (response.status===true) {
          // Product added to Wishlist successfully
		  Swal.fire({
			position: 'centre',
			icon: 'success',
			title: 'Product added to wish list',
			showConfirmButton: false,
			timer: 1500
			})
          

        } else {
          // Error adding product to Wishlist
          Swal.fire({
            icon: 'error',
            title: 'Product already exist in Wishlist',
            timer: 2000
          });

        }
      }
    })
  }


</script>

