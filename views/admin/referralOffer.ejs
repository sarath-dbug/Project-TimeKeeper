<%-include("header")-%>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <section class="content-main">

        <div class="content-header">
            <div>
                <h2 class="content-title card-title">Referral Amount</h2>
            </div>
            <div>
                <input type="text" placeholder="Search Categories" class="form-control bg-white">
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="row">

                    <div class="col-md-3">
                        <% for (let i=0; i < refer.length; i++) { %>
                            <form action="/admin/editReferral?referId=<%= refer[i]._id %>" method="post">

                                <div class="mb-3">
                                    <label for="referrer" class="form-label">Referrer</label>
                                    <input type="text" class="form-control" placeholder="Write Description"
                                        name="referrer" id="referrer" required value="<%= refer[i].referrer %>">
                                </div>
                                <div class="mb-3">
                                    <label for="referee" class="form-label">Referee</label>
                                    <input type="text" class="form-control" placeholder="Write Description"
                                        name="referee" id="referee" required value="<%= refer[i].referee %>">
                                </div>

                                <div class="d-grid">
                                    <button class="btn btn-primary">Edit</button>
                                </div>
                            </form>
                            <% } %>

                    </div>

                    <div class="col-md-9">
                        <div class="table-responsive">
                            <table class="table table-hover" id="myTable">
                                <thead>
                                    <tr>
                                        <th style="text-align: center;">User Nme</th>
                                        <th style="text-align: center;">Referral Code</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    <%userData.forEach(user=>{%>
                                        <tr>
                                            <td style="text-align: center;">
                                                <%=user.firstName%>
                                            </td>
                                            <td style="text-align: center;">
                                                <%=user.referCode%>
                                            </td>

                                        </tr>
                                        <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </section>


    <%- include("footer") %>


        <script>
            $(document).ready(function () {
                $('#myTable').DataTable();
            });
        </script>

        <script src="//cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>